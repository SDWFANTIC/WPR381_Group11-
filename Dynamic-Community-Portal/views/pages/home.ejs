<%- include('../partials/header') %>

<h1>Welcome to the Community Portal</h1>
<h2>Upcoming Events This Month</h2>

<% if (upcomingEvents.length > 0) { %>
  <div style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: center;">
    <% upcomingEvents.forEach(event => { %>
      <div style="border: 1px solid #ccc; padding: 15px; width: 300px; border-radius: 8px; background: #f9f9f9; text-align: center;">
        <img src="<%= event.image %>" alt="<%= event.title %> Image" style="max-width: 100%; height: auto; border-radius: 5px;" />
        <h3><%= event.title %></h3>
        <p><strong>Date:</strong> <%= event.date %></p>
        <p><strong>Location:</strong> <%= event.location %></p>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <p>No events this month. Stay tuned!</p>
<% } %>
<%- include('../partials/footer') %>